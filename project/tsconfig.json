{
    "compilerOptions": {
        "strict": true,
        "moduleDetection": "force",
        "module": "Preserve",
        "resolveJsonModule": true,
        "allowJs": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "verbatimModuleSyntax": false,
        "baseUrl": ".",
        "paths": {
            "@spt/*": [
                "./src/*"
            ],
            "@tests/*": [
                "./tests/*"
            ]
        },
    },
    "include": [
        "src/*",
        "src/**/*"
    ]
}
